<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
<modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.exoplatform.ecm.workflow</groupId>
    <artifactId>extension</artifactId>
    <version>2.0.0-Beta02-SNAPSHOT</version>
  </parent>

  <groupId>org.exoplatform.ecm.workflow.extension</groupId>
  <artifactId>exo.ecm.workflow.extension.webapp</artifactId>
  <packaging>war</packaging>
  <name>eXo WORKFLOW Extension configuration war</name>
  <build>
	<plugins>
		  <plugin>
		    <groupId>org.apache.maven.plugins</groupId>
		    <artifactId>maven-war-plugin</artifactId>
		    <version>2.0.2</version>
		    <configuration>
				<webResources>
				   <resource>
					   <directory>${basedir}/src/main/webapp</directory>
					   <filtering>true</filtering>
					 </resource>
					 <resource>
				      <directory>${exo.projects.app.mvn.repo}/org/exoplatform/ecm/workflow/bp/exo.ecm.workflow.bp.${workflowEngine}.payraise/${project.version}</directory>
				      <targetPath>WEB-INF/conf/bp</targetPath>
				      <includes><include>*.jar</include></includes>
				      <excludes><exclude>*-sources.jar</exclude></excludes>
				    </resource>
				    <resource>
				      <directory>${exo.projects.app.mvn.repo}/org/exoplatform/ecm/workflow/bp/exo.ecm.workflow.bp.${workflowEngine}.holiday/${project.version}</directory>
				      <targetPath>WEB-INF/conf/bp</targetPath>
				      <includes><include>*.jar</include></includes>
		 			  <excludes><exclude>*-sources.jar</exclude></excludes>
				    </resource>
				</webResources>
	 		</configuration>
       </plugin>
    </plugins>
  </build>
</project>
