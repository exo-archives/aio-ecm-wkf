<?xml version="1.0" encoding="UTF-8"?>
<bundle>
  <!--
  #############################################################################
  #			org.exoplatform.workflow.webui.component.monitor											#
  #############################################################################
  -->
  <UIWorkflowAdministrationPortlet>
    <tab>
      <label>Administration</label>
      <text>Admin Workflow Management</text>
    </tab>
  </UIWorkflowAdministrationPortlet>
  <UITabPane>
    <title>
      <UIMonitor>Process Monitor</UIMonitor>
    </title>
  </UITabPane>
  <UIMonitor>
    <header>
      <id>Process Id</id>
      <name>Process Name</name>
      <version>Process Version</version>
      <action>Action</action>
    </header>
    <msg>
      <empty>No business process to monitor</empty>
    </msg>
  </UIMonitor>
  <UIAdministrationManager>
    <tab>
      <label>
        <UITimers>Timers</UITimers>
        <UIMonitor>Monitor</UIMonitor>
      </label>
    </tab>
    <msg>
      <confirm-delete-process>Do you want to delete this process model?</confirm-delete-process>
    </msg>
    <action>
      <UploadProcess>Upload process</UploadProcess>
      <title>
        <View>View</View>
        <Delete>Delete</Delete>
      </title>
    </action>
  </UIAdministrationManager>
  <UITimers>
    <header>
      <id>Id</id>
      <name>Name</name>
      <dueDate>Due Date</dueDate>
    </header>
    <msg>
      <empty>No timer set</empty>
    </msg>
  </UITimers>
  <AdministrationPopup>
    <title>
      <UIProcessDetail>Process Detail</UIProcessDetail>
    </title>
  </AdministrationPopup>
  <UploadProcessPopup>
    <title>
      <UIUploadProcess>Upload process</UIUploadProcess>
    </title>
  </UploadProcessPopup>
  <UIUploadProcess>
    <label>
      <name>Name</name>
      <upload>Select a file</upload>
    </label>
    <action>
      <Save>#{word.save}</Save>
      <Cancel>#{word.cancel}</Cancel>
    </action>
    <msg>
      <fileName-error>File path not found</fileName-error>
      <fileName-invalid>Have some invalid characters in file name. Type file name or upload other file, please.</fileName-invalid>
      <process-successful>Upload successfully!</process-successful>
      <data-invalid>Have some problems with your data. Can't find processdefinition.xml inside process archive.</data-invalid>
    </msg>
  </UIUploadProcess>
  <UIProcessDetailGrid>
    <header>
      <processInstanceId>Process Instance Id</processInstanceId>
      <processId>Process Id</processId>
      <processName>Process Name</processName>
      <startDate>Start Date</startDate>
      <endDate>End Date</endDate>
      <action>Action</action>
    </header>
    <msg>
      <empty>No process to view detail</empty>
    </msg>
  </UIProcessDetailGrid>
  <UIProcessDetail>
    <msg>
      <confirm-delete-process>Do you want to delete this process instance?</confirm-delete-process>
    </msg>
  </UIProcessDetail>    
  <UITasksGrid>
    <header>
      <id>Id</id>
      <taskName>Task Name</taskName>
      <actorId>Actor Id</actorId>
      <end>End</end>
    </header>
  </UITasksGrid>
  <UIProcessDetail>
    <tab>
      <label>
        <UICompletedProcessGrid>Completed</UICompletedProcessGrid>
        <UIRunningProcessGrid>Processing</UIRunningProcessGrid>
      </label>
    </tab>    
  </UIProcessDetail>
  <TaskListOfProcessPopup>
    <title>
      <UITaskListOfProcess>List tasks of Instance</UITaskListOfProcess>
    </title>
  </TaskListOfProcessPopup>
</bundle>

