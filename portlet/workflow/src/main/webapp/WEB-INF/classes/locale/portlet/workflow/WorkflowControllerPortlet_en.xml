<?xml version="1.0" encoding="UTF-8"?>
<bundle>
  <!--
  #############################################################################
  #			org.exoplatform.workflow.webui.component.controller										#
  #############################################################################
  -->
  <UIWorkflowControllerPortlet>
    <tab>
      <label>Controller</label>
      <text>Admin Workflow Management</text>
    </tab>
    <msg>
      <refresh-session-success>The session has been refreshed successfully</refresh-session-success>
    </msg>
    <label>
      <refesh>Refesh</refesh>
    </label>
  </UIWorkflowControllerPortlet>
  <ControllerPopup>
    <title>
      <UITaskManager>UITask Manager</UITaskManager>
    </title>
  </ControllerPopup>
  <UITabPane>
    <title>
      <UITaskList>Task Controller</UITaskList>
      <UIBPDefinition>BP Definition Controller</UIBPDefinition>
      <UIDocumentContent>View content</UIDocumentContent>
      <UIDocumentForm>Edit content</UIDocumentForm>
      <UITask>Task</UITask>
    </title>
  </UITabPane>
  <UITaskList>
    <header>
      <id>Task ID</id>
      <processName>Process Name</processName>
      <taskName>Task Name</taskName>
      <actor>Actor</actor>
      <description>Description</description>
      <actorId>Actor Id</actorId>
      <taskVariables>Task Variables</taskVariables>
      <processDateStart>Process Date Start</processDateStart>
      <action>Action</action>
    </header>
    <label>
      <managerState>Manage</managerState>
    </label>
    <msg>
      <task-not-found>The task cannot be managed. The most probable reason is that it has been already managed by another user.</task-not-found>
      <task-change>The task you have selected has been changed or removed</task-change>
    </msg>
  </UITaskList>
  <UITaksList>
    <msg>
      <no-task>No assigned task</no-task>
    </msg>
  </UITaksList>
  <UITask>
    <label>
      <hide-process-link>Hide process link</hide-process-link>
      <show-process-link>Show process link</show-process-link>
    </label>
    <title>
      <Delegate>Select User</Delegate>
    </title>
    <msg>
      <has-not-got-delegate>You must choose any user to deletgate</has-not-got-delegate>
    </msg>
  </UITask>
  <PopupDelegatedSelectorId>
    <title>
      <UIUserSelectContainer>Select User</UIUserSelectContainer>
    </title>
  </PopupDelegatedSelectorId>
  <UIBPDefinition>
    <header>
      <id>Id</id>
      <name>Name</name>
      <version>Version</version>
      <action>Action</action>
    </header>
    <msg>
      <empty>No business process to start</empty>
    </msg>
  </UIBPDefinition>
  <UIControllerManager>
    <action>
      <title>
        <ManageStart>Manage Start</ManageStart>
      </title>
    </action>
  </UIControllerManager>
  <UIDocumentForm>
    <msg>
      <cannot-save>Some constraints were violated during that action.</cannot-save>
      <in-versioning>Need to checkout current node before add new node</in-versioning>
      <not-support>Cannot load template of '{0}'.</not-support>
      <value-invalid>'{0}' is needed value</value-invalid>
    </msg>
  </UIDocumentForm>
</bundle>

