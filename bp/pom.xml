<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"> 
  <parent>
    <groupId>org.exoplatform.ecm.workflow</groupId>
    <artifactId>workflow-parent</artifactId>
    <version>1.0.6-SNAPSHOT</version>
  </parent> 

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.exoplatform.ecm.workflow.bp</groupId>
  <artifactId>workflow-bp-parent</artifactId>
  <name>eXo Workflow business processes configuration</name>
  <packaging>pom</packaging>

  <modules>
    <module>bonita/holiday</module>
    <module>bonita/payraise</module>

    <module>jbpm/holiday</module>
    <module>jbpm/payraise</module>
  </modules>

  <developers>
    <developer>
      <name>Brice Revenant</name>
      <organization>Bull S.A.S</organization>
      <organizationUrl>http://www.bull.com</organizationUrl>
    </developer>
  </developers>

  <build>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/conf</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.gtmpl</include>
          <include>**/*.xpdl</include>
          <include>**/*.properties</include>
          <include>**/*.gif</include>
        </includes>
      </resource>
    </resources>
  </build>
  
  <profiles>
    <profile>
      <id>default</id>
      <activation>
        <property><name>default</name></property>
        <activeByDefault>true</activeByDefault>
      </activation>
    </profile>
  </profiles>
</project>
