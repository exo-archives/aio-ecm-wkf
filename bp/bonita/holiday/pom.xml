<project>
  <parent>
    <groupId>org.exoplatform.workflow.bp</groupId>
    <artifactId>config</artifactId>
    <version>trunk</version>
  </parent> 
  <modelVersion>4.0.0</modelVersion>
  <artifactId>exo.workflow.bp.bonita.holiday</artifactId>
  <version>${org.exoplatform.workflow.version}</version>
  <packaging>jar</packaging>
  <name>eXo holidays BP for Bonita</name>
  <url>http://www.exoplatform.org</url>
  <description>eXo holidays BP for Bonita</description>
 
   <dependencies>
    <dependency>
      <groupId>org.exoplatform.workflow</groupId>
      <artifactId>exo.workflow.component.workflow.impl.bonita</artifactId>
      <version>${org.exoplatform.workflow.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.ow2.bonita</groupId>
      <artifactId>bonita-api</artifactId>
      <version>4.0</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  
  <build>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-antrun-plugin</artifactId>
          <executions>
            <execution>
              <id>createbpstructure</id>
              <goals><goal>run</goal></goals>
              <phase>compile</phase>
              <configuration>
                <tasks>
                  <move todir="target/classes/classes">
                    <fileset dir="target/classes">
                      <include name="hero/**"/>
                    </fileset>
                  </move>
                </tasks>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
  </build>
  
</project>
