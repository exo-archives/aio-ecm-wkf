  <task-name>Demande d'augmentation</task-name>
  <title>Demander une augmentation</title>
  <submit>Valider</submit>
  <!--
  #variable title and label
  -->
  <reason>
    <title>Raison justifiant l'augmentation</title>
    <label>Raison :</label>
  </reason>
  <amount-asked>
    <title>le montant de l'augmentation</title>
    <label>Montant :</label>
  </amount-asked>
  <rewarded>
    <title>l'initiateur a t'il été augmenté</title>
